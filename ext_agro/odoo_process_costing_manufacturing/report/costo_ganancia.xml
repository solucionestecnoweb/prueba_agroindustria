<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data> 
    <template id="reporte_costo_ganancia">
      <t t-call="web.html_container">
        <t t-call="web.basic_layout" >
          <div class="header">
            <table width="100%">

                    <tr>
                      <td style="width:30%;text-align:center;">
                        <t t-if="docs.company_id.logo">  
                            <img t-attf-src="data:image/*;base64,{{docs.company_id.logo}}" style="width:auto; height:80px;"/>
                        </t>
                      </td>
                      <td style="font-size:13px;"><t t-esc="docs.company_id.street"/>
                      <br/>
                      CÃ“DIGO POSTAL: <t t-esc="docs.company_id.zip"/>
                     <br/>
                     RIF: <t t-esc="docs.doc_cedula(docs.company_id.partner_id.id)"/>
                    </td>
                    </tr>

            </table>
          </div>
          <div class="page">
            <table width="100%"><!--table table-bordered-->
              <tr>
                <td align="center" colspan="7">RESUMEN DE COSTOS VS GANANCIAS</td>
              </tr>
              <tr><td colspan="7"><hr/></td></tr>
              <tbody class="table table-bordered">
              <tr>
                <td>PRODUCTO</td>
                <td>COSTO UNIT.</td>
                <td>CANTIDAD</td>
                <td>COSTO TOTAL</td>
                <td>PRECIO UNIT.</td>
                <td>TOTAL VENTA</td>
                <td>GANANCIA</td>
              </tr>
              <t t-foreach="docs.line" t-as="o">
                <tr>
                <td><t t-esc="o.product_id.name"/></td>
                <td align="right"><t t-esc="o.costo_unit"/>.</td>
                <td align="right"><t t-esc="o.cantidad"/></td>
                <td align="right"><t t-esc="o.costo_total"/></td>
                <td align="right"><t t-esc="o.valor_venta_unit"/></td>
                <td align="right"><t t-esc="o.sub_total"/></td>
                <td align="right"><t t-esc="o.ganancia_total"/></td>
              </tr>
              </t>
            </tbody>
            </table>
          </div>

        </t>
      </t>

    </template>
  
    <report
              id="report_costo_ganancia"
              model="stock.wizard.costo.ganancia"
              string="Reporte Costo vs Ganancia"
              report_type="qweb-pdf"
              name="odoo_process_costing_manufacturing.reporte_costo_ganancia"
              file="odoo_process_costing_manufacturing.reporte_costo_ganancia"
          />

  </data>
</odoo>